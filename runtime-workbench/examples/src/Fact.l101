/*
 * Compute factorial for numbers from 1 to N.
 * 
 * Start program with 'V', enter N and the program will prints all numbers form 1
 * to N included with their respective factorial.
 */ 
SHORT n IN B, i IN B/;
LONG fact IN C;

start ON V:

	INPUT->n; // ask user where to stop
	1-> fact;
	
	FOR 1->i; =i-n; i<->i+1 DO // for each number
	
		// compute i!
		fact<->fact*i;
		
		PRINT i, fact, NL;
	END
	 